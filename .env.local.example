# Database
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/contextual_workspace"

# NextAuth.js Configuration
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"
# Secret for encrypting cookies (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"

# GitHub OAuth (for authentication)
# Create OAuth app at: https://github.com/settings/developers
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Stripe Configuration
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional: Google OAuth
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: Email configuration (for email/password auth)
# EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"
# EMAIL_FROM="noreply@example.com"

# Optional: Redis (for session storage)
# REDIS_URL="redis://localhost:6379"

# Optional: Upload configuration
# NEXT_PUBLIC_UPLOAD_URL="https://your-upload-service.com"
# UPLOAD_API_KEY="your-upload-api-key"

# Optional: Analytics
# NEXT_PUBLIC_GA_TRACKING_ID="UA-XXXXXXXXX-X"
# NEXT_PUBLIC_POSTHOG_KEY="phc_..."
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Optional: Feature flags
# NEXT_PUBLIC_ENABLE_BETA_FEATURES="false"
# NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Development flags
NODE_ENV="development"